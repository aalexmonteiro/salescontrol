<header>
  <h4>Buscar Clientes</h4>
</header>
<section class="section">
  <%= form_for :customers, method: :get do |f| %>
  <div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s9">
          <input placeholder="Nome" id="search" type="text" name="keywords">
        </div>
        <div class="col s3">
          <button class="btn waves-effect waves-light" type="submit" name="commit">
          Buscar
          </button>
        </div>
      </div>
    </form>
  </div>
  <% end %>
</section>
<section class="section">
  <table class="responsive-table highlight">
    <thead>
      <tr>
        <th>Id</th>
        <th>Nome</th>
        <th>Telefone</th>
      </tr>
    </thead>
    <tbody>
      <%= @customers.each do |c| %>
        <tr>
          <td><%= c.id %></td>
          <td><%= c.name %></td>
          <td><%= c.phone %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>